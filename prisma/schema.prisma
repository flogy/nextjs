generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Paths {
  id              Int           @id @default(autoincrement()) //fixme: replace with uuid
  leistungsgruppe String
  name            String
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  PrimaryPath     PrimaryPath[]
}

model PrimaryPath {
  id                Int             @id @default(autoincrement()) //fixme: replace with uuid
  path              Paths           @relation(fields: [parentPath], references: [id])
  parentPath        Int
  reactFlowInstance String
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  SecondaryPath     SecondaryPath[]
}

model SecondaryPath {
  id                Int         @id @default(autoincrement()) //fixme: replace with uuid
  primaryPath       PrimaryPath @relation(fields: [parentNode], references: [id])
  parentNode        Int
  reactFlowInstance String
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
}

